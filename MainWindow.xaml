<Window x:Class="AuthReg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthReg"
        mc:Ignorable="d"
        Title="Notucation Admin" Height="450" Width="1000" ResizeMode="CanMinimize" Background="#ffcf40" Icon="Properties\logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0" Orientation="Horizontal" Background="#bf9b30">
            <TextBlock Margin="5" FontSize="20" Style="{StaticResource textStyle}">Notucation Admin</TextBlock>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
            <Button Name="buttAuth" Margin="3,0" Height="25" Width="80" Click="buttAuth_Click">Вход</Button>
            <Button Name="buttReg" Height="25" Width="80" Click="buttReg_Click">Регистрация</Button>
        </StackPanel>
        <Frame Name="mainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
