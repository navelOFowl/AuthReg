<Window x:Class="AuthReg.EditWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthReg"
        mc:Ignorable="d"
        Title="EditWin" Height="270" Width="200" Background="#ecb617">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Имя:</TextBlock>
            <TextBox Name="tbNewName" Margin="0,5"></TextBox>
            <TextBlock>Фамилия:</TextBlock>
            <TextBox Name="tbNewSurname" Margin="0,5"></TextBox>
            <TextBlock>Логин:</TextBlock>
            <TextBox Name="tbNewLogin" Margin="0,5"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <PasswordBox Name="tbNewPass" Width="150" Margin="0,5"></PasswordBox>
            <Button Name="buttSend" Margin="0,10" Width="100" Click="buttSend_Click">Изменить</Button>
        </StackPanel>
    </Grid>
</Window>
